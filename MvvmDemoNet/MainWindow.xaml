<Window x:Class="MvvmDemoNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmDemoNet"
        xmlns:vm="clr-namespace:MvvmDemoNet.ViewModel"
        xmlns:converter="clr-namespace:MvvmDemoNet.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        Title="MVVM DEMO .NET" Height="400" Width="480">
    <Window.Resources>
        <converter:IndexToColor x:Key="Index2Color"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Slider Margin="20" Minimum="0" Maximum="100" Value="{Binding IndexColor}" />
        <Label Grid.Column="2" Content="{Binding IndexColor}" VerticalAlignment="Center" Margin="20,0"/>

        <!--Background="{Binding IndexColor, Converter={StaticResource Index2Color}}"-->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="{Binding IndexColor, Converter={StaticResource Index2Color}}"  />
        
    </Grid>
</Window>
